{
    "name": "react-webpack-boilerplate",
    "author": "Rich Sturim",
    "license": "MIT",
    "version": "1.0.0",
    "description": "React Webpack Boilerplate",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/rsturim/react-webpack-boilerplate"
    },
    "scripts": {
        "start": "webpack-dev-server --hot --inline --config webpack.dev.js",
        "build": "webpack --config webpack.prod.js  --progress --profile --colors",
        "test": "jest",
        "test-watch": "jest --watch",
        "eslint": "eslint --ext .jsx,.js src/;exit 0",
        "eslint-fix": "eslint --fix --ext .jsx,.js src/;exit 0",
        "pretty": "prettier --write 'src/**/*.js'",
        "precommit": "lint-staged && npm test",
        "dev-server": "json-server -p 8080 db.json"
    },
    "lint-staged": {
        "*.js": [
            "npm run pretty",
            "git add"
        ]
    },
    "dependencies": {
        "react": "^16.8.6",
        "react-dom": "^16.8.6",
        "react-router-dom": "^5.0.0",
        "json-server": "^0.10.1",
        "react-redux": "^5.0.5",
        "redux": "^3.6.0",
        "redux-devtools-extension": "^2.13.2",
        "redux-thunk": "^2.2.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.3",
        "@babel/core": "^7.4.3",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-react": "^7.0.0",
        "autoprefixer": "^9.5.1",
        "babel-core": "^7.0.0-bridge.0",
        "babel-loader": "^8.0.5",
        "clean-webpack-plugin": "^2.0.1",
        "css-loader": "^2.1.1",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.12.1",
        "enzyme-to-json": "^3.3.5",
        "eslint": "^5.16.0",
        "eslint-loader": "^2.1.2",
        "eslint-plugin-compat": "^3.1.1",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-react": "^7.12.4",
        "file-loader": "^3.0.1",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^1.3.1",
        "img-loader": "^3.0.1",
        "jest": "^24.7.1",
        "lint-staged": "^8.1.5",
        "mini-css-extract-plugin": "^0.6.0",
        "node-sass": "^4.11.0",
        "postcss-loader": "^3.0.0",
        "prerender-loader": "^1.3.0",
        "prettier": "1.16.4",
        "react-test-renderer": "^16.8.6",
        "redux-mock-store": "^1.5.3",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "uglifyjs-webpack-plugin": "^2.1.2",
        "url-loader": "^1.1.2",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0",
        "webpack-dev-server": "^3.3.1",
        "webpack-merge": "^4.2.1",
        "webpack-notifier": "^1.7.0"
    },
    "jest": {
        "setupFilesAfterEnv": [
            "./src/polyfills/enzyme.setup.js"
        ],
        "testURL": "http://localhost"
    },
    "browserslist": {
        "development": [
            "last 2 chrome versions",
            "last 2 firefox versions",
            "last 2 edge versions"
        ],
        "production": [
            ">1%",
            "last 4 versions",
            "Firefox ESR",
            "not ie < 11"
        ]
    }
}
